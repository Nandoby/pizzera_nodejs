extends ../layout

block content
    .container
        div(style="padding-top: 4rem;" class="d-flex gap-10")
            div(class="flex-50")
                img(src=(pizza.img.startsWith('http') ? pizza.img : "../images/"+pizza.img))
            div(class="flex-50")
                h2(style="font-size:3rem; text-align: center;") #{pizza.name}
                h4(style="margin-top: 2rem")
                    span(style="font-weight:600") Prix : 
                    span #{pizza.price} €
                h4(style="margin-top: 2rem; font-size: 1.25rem; font-weight:600") Description
                p(style="margin-top: 1rem; line-height: 1.5") #{pizza.description}
                h4(style="margin-top: 2rem; font-size: 1.25rem; font-weight:600") Ingrédients
                p(style="margin-top: 0.5rem") #{pizza.ingredients.join(", ")}

